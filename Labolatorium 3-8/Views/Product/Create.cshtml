@model Labolatorium_3_8.Models.Product

<h2>Dodaj Produkt</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Nazwa produktu</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Cena</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <label asp-for="Manufacturer">Producent</label>
    <div>
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
   <div>

    <select class="form-control" asp-for="Manufacturer" asp-items="@Html.GetEnumSelectList<Manufacturer>()"></select>
    </div>


    <div class="form-group">
        <label asp-for="ProductionDate">Data produkcji</label>
        <input asp-for="ProductionDate" type="date" class="form-control" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierId">Dostawca</label>
        <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ShippingCarrierId">Przewoźnik</label>
        <select asp-for="ShippingCarrierId" asp-items="ViewBag.ShippingCarriers" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
